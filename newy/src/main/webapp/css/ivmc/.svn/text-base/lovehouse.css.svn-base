@charset "UTF-8";
* {
	-webkit-tap-highlight-color: transparent;
	outline: 0;
}

body,
h1,
h2,
h3,
h4,
h5,
h6,
hr,
p,
blockquote,
dl,
dt,
dd,
ul,
ol,
li,
pre,
form,
fieldset,
legend,
button,
input,
textarea,
th,
td {
	margin: 0;
	padding: 0;
	vertical-align: baseline
}

img {
	border: 0 none;
	vertical-align: top
}

i,
em {
	font-style: normal
}

ol,
ul {
	list-style: none
}

input,
select,
button,
h1,
h2,
h3,
h4,
h5,
h6 {
	font-size: 100%;
	font-family: inherit
}

table {
	border-collapse: collapse;
	border-spacing: 0
}

a,
a:visited {
	text-decoration: none;
	color: #333
}

body {
	margin: 0 auto;
	min-width: 320px;
	max-width: 640px;
	background: #eeefef;
	font-size: 14px;
	font-family: Helvetica, STHeiti STXihei, Microsoft JhengHei, Microsoft YaHei, Arial;
	color: #222;
	-webkit-text-size-adjust: 100% !important
}

/*   ↑页面重置↑   */
.wrap {
	/*max-width: 640px;*/
	min-width: 320px;
	/*width:100%;*/
}
.city-hea-con {
	height: 53px;
}
.love-header {
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	width: 100%;
	background-color: #eb3b3b;
	text-align: center;
	z-index: 9999;
}
.love-header a {
	color: #fff;
	width: 11%;
	padding-right: 2%;
	display: inline-block;
	background: url(../../images/ivmc/citybtn.png) no-repeat right center;
	background-size: 10px 6px;
}
.love-header input {
	width: 78%;
	height: 33px;
	line-height: 33px;
	margin: 10px 2%;
	border: none;
	background-color: ;
	background: #fd8378 url(../../images/ivmc/love-header.png) no-repeat 5px 5px;
	color: #fff;
	border-radius: 3px;
	text-align: center;
}
::-webkit-input-placeholder { /* WebKit browsers */ 
color: #fff; 
} 
:-moz-placeholder { /* Mozilla Firefox 4 to 18 */ 
color: #FFF; 
} 
::-moz-placeholder { /* Mozilla Firefox 19+ */ 
color: #fff; 
} 
:-ms-input-placeholder { /* Internet Explorer 10+ */ 
color: #fff; 
} 

.city {
	width: 94%;
	padding: 13px 3%;
	background-color: #fff;
	overflow: hidden;
}
.city h2 {
	background: url(../../images/ivmc/city.png) no-repeat 2px 5px;
	padding: 10px 0 3px 30px;
	border-bottom: 1px solid #eee;
}

.cities-list {
	margin-top: 10px;
	padding-bottom: 10px;
	border-bottom: 1px solid #eee;
}
.cities-list select {
	width: 100%;
	height: 33px;
	border: 1px solid #eb3b3b;
}
.cities-list option {
	width: 100%;
}

.city-search-btn {
	width: 100%;
	background-color: #fff;
	text-align: center;
}
.city-search-btn span {
	display: inline-block;
	width: 40%;
	padding: 5px 0;
	margin-bottom: 10px;
	color: #fff;
	background-color: #eb3b3b;
	border-radius: 3px;
}
.city-search-btn span:nth-of-type(1) {
	margin-right: 6%;
}

.other-media-title,
.my-media-title {
	width: 100%;
	background-color: #eee;
	padding: 3px 0;
}
.other-media-title > h2,
.my-media-title > h2 {
	display: block;
	background: url(../../images/ivmc/media-h2.png) no-repeat 10px 7px;
	font-weight: normal;
	font-size: 16px;
	padding: 5px 0 5px 35px;
}
.my-media {
	width: 96%;
	padding: 0 2% 3px;
	background-color: #fff;
}
.my-media-img {
	width: 100%;
	padding: 10px 0;
}
.my-media-img img {
	width: 100%;
}
.my-media-det {
	padding: 5px 0 3px;
	width: 100%;
	overflow: hidden;
	border-bottom: 1px solid #eee;
	margin-bottom: 5px;
}
.my-media-det h2 {
	color: #eb3b3b;
	margin-left: 15px;
	float: left;
}
.my-media-det a {
	background: url(../../images/ivmc/audio-img.png) no-repeat 0px 3px;
	padding-left: 23px;
	padding-top: 3px;
	float: right;
	margin-right: 15px;
}

.media {
	overflow: hidden;
	background-color: #fff;
	width: 96%;
	padding: 0 2%;
	font-size: 12px;
}
.media li {
	width: 100%;
	border-bottom: 1px solid #eee;
	padding-top: 10px;
	overflow: hidden;
}
.vedio {
	width: 40%;
	float: left;
	text-align: center;
	margin-right: 2%;
}
.vedio img {
	width: 110px;
	height: 70px;
}
.media-msg {
	width: 58%;
	float: left;
}
.audio{
	display: inline-block;
	width: 100%;
	margin-top: 10px;
}
.audio a {
	color: #eb3b3b;
	font-size: 14px;
	line-height: 25px;
	overflow: hidden;
}
.audio a {
	background: url(../../images/ivmc/audio-img.png) no-repeat 0px 0px;
	padding-left: 23px;
	padding-top: 3px;
}
.audio audio {
	width: 100%;
}
.audio p {
	font-size: 14px;
	margin-top: 5px;
}

.media-people {
	line-height: 19px;
	text-align: right;
	margin-bottom: 3px;
	margin-right: 10px;
}
.media-people > span {
	padding-left: 18px;
}
.media-people > span > span {
	color: #eb3b3b;
}
.media-people span:nth-of-type(1) {
	padding-right: 5px;
}

.media-people span:nth-of-type(2) {
	display: inline-block;
	background: url(../../images/ivmc/media-peo-1.png) no-repeat 5px 3px;
}
.media-people span:nth-of-type(3) {
	display: inline-block;
	background: url(../../images/ivmc/media-peo-2.png) no-repeat 3px 4px;
}
.media-people span:nth-of-type(4) {
	display: inline-block;
	background: url(../../images/ivmc/media-peo-3.png) no-repeat 5px 4px;
}
.media-people span.dj {
	background-position: 6px -12px;
}